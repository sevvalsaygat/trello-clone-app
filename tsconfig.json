{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./@types"],
    "paths": {
      "@/*": ["./*"],
      "@app/componets": ["./components"],
      "@app/constants": ["./constants"],
      "@app/hooks": ["./hooks"],
      "@app/hooks/*": ["./hooks/*"],
      "@app/layouts": ["./layouts"],
      "@app/libs": ["./libs"],
      "@api": ["./api"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
